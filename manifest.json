{
    "manifest_version": 3,
    "name": "Canvas to Notion Task Sync",
    "version": "1.0",
    "description": "✧ features ✧\n- daily automatic syncing (runs in the background)\n- manual sync whenever you want\n- creates a new weekly database every sunday\n- archives completed and past-due tasks\n- organizes tasks by day of the week",
    "permissions": [
      "storage",
      "alarms",
      "activeTab"
    ],
    "host_permissions": [
      "https://*.instructure.com/api/v1/*",
      "https://api.notion.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
      }
    },
    "icons": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  }
